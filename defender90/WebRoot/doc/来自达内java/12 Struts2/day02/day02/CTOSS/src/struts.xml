<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>

	<!-- 
		资费模块配置：
		一般情况下，一个模块配置到一个package下，
		并且package使用模块名来命名。
	 -->
	 <package name="cost"
	 	namespace="/cost"
	 	extends="struts-default">
	 	<!-- 
	 		查询全部资费.
	 		method属性可以省略不写，当省略时Struts2
	 		会自动调用execute方法，当然此时Action类
	 		中必须有execute方法，否则会报错。
	 	-->
	 	<action name="findCost"
	 		class="com.tarena.action.FindCostAction">
	 		<result name="success">
	 			/WEB-INF/cost/cost_list.jsp
	 		</result>
	 	</action>
	 </package>
	 
	 <!-- 登录模块 -->
	 <package name="login"
	 	namespace="/login"
	 	extends="struts-default">
	 	<!-- 打开登录页 -->
	 	<!-- class属性可以省略，当省略时Struts2
	 		会自动调用ActionSupport类，该类是
	 		Struts2预置的类，包含一个execute方法，
	 		该方法返回了success -->
	 	<action name="toLogin">
	 		<result name="success">
	 			/WEB-INF/main/login.jsp
	 		</result>
	 	</action>
	 	<!-- 登录校验 -->
	 	<action name="checkLogin"
	 		class="com.tarena.action.CheckLoginAction">
	 		<result name="fail">
	 			/WEB-INF/main/login.jsp
	 		</result>
	 		<result name="success">
	 			/WEB-INF/main/index.jsp
	 		</result>
	 	</action>
	 	<!-- 创建验证码图片 -->
	 	<action name="createImage"
	 		class="com.tarena.action.CreateImageAction">
	 		<!-- 利用StreamResult将Action提供的
	 			输入流属性输出至页面。 -->
	 		<result name="success" type="stream">
	 			<param name="inputName">
	 				imageStream
	 			</param>
	 		</result>
	 	</action>
	 </package>

</struts>